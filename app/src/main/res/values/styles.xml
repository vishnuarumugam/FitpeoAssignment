<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="header_16_light">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/theme_color_one</item>
    </style>

    <style name="header_tv_style">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/theme_color_one</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="challenge_header_tv_style">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/theme_color_one</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="album_header_tv_style">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/theme_color_one</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="album_sub_title_tv_style">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/theme_color_two</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">false</item>
    </style>

</resources>